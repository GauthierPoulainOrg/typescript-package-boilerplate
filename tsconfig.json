{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*", "rollup.config.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
